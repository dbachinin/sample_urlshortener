<p id="notice"><%= notice %></p>

<h1>Reseived URLs</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Shortmessage</th>
      <th>Sender</th>
      <th colspan="2"></th>
    </tr>
  </thead>


  <tbody>
  <% @inboxes.each do |inbox|
    if inbox.reseiver == current_user.id
      shortmessage = inbox.shortmessage
      sender = inbox.sender
   %>
      <tr>
        <% if inbox.read != nil %>
         <td><%= " "+inbox.shortmessage %></td>
         <% else %>
         <td><div class="glyphicon glyphicon-envelope"><%= " "+inbox.shortmessage %></div></td>
          <% end %>
        <td><%= User.find(inbox.sender).email %></td>
        <td><%= link_to 'Show', inbox, class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', inbox, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

