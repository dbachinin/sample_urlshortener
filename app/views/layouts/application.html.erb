<!DOCTYPE html>
<html>
<head>
  <title>ShortURL</title>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>    
<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "URL Shortener", '#', id: "logo" %>
        <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
                <% if logged_in? %>
          <li><%= link_to "Users", persons_profile_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">

              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
      </div>
    </header>

       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

    <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
    <div class="container">

    <p style= "height:150px;">
    <%= yield %></p>
    </div>
    </div>
  </div>
</body>
</html>
